<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
	<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	@RenderSection("Styles", false)
</head>
<body class="bg-light" x-data>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark"
			 x-show="$store.tab == 'recipes' || $store.tab == 'categories'">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">Yumyums</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link" style="cursor: pointer;" x-on:click="$store.tab = 'recipes'">Recipes</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" style="cursor: pointer;" x-on:click="$store.tab = 'categories'">Categories</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container col-sm-7">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>